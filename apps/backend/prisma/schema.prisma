generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Holder {
  id              String            @id @unique
  address         String            @unique
  credentialOffer CredentialOffer[]
}

model CredentialOffer {
  id       String  @id @default(cuid())
  metadata Bytes
  holder   Holder? @relation(fields: [holderId], references: [id])
  holderId String?
}
